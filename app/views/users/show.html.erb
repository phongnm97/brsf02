<div class="container profile_header">
  <div class="row">
    <div class="col-md-3 img">
     <figure><img src= <%= @user.avatar.url %> ></figure>
    </div>
    <div class="col-md-9 details">
      <blockquote>
        <h5><%= @user.name %></h5>
        <small><cite title="Source Title"><%= @user.email %><i class="icon-map-marker"></i></cite></small>
      </blockquote>
       <%= render "shared/stats" %>
        <%= render "follow_form" if logged_in? %>
    </div>
  </div>
</div>
<%= render "feed" %>
