<div class="modal fade in" id="myModal" role="dialog" >
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">X</span>
        </button>
        <h2 class="modal-title"><label class="label label-lg label-primary" id = "review-box-title" ></label>
        </h2>
      </div>
      <div class="modal-body">
        <% @review = current_user.reviews.build %>
        <%= form_for(@review) do |f| %>
          <div><%= hidden_field_tag "review[book_id]", "", {class: "form-control input-sm", id: "review_book_id" } %></div>
          <%= f.label t("model.review.title") %>
          <%= f.text_field :title, {class: "form-control",placeholder: (t ".title_holder") } %>
          <%= f.label t("model.review.content") %>
          <%= f.text_area :content, class: "form-control",placeholder: (t ".content_holder") %>
          <input type="hidden" id="selected_rating" name="review[stars]" value="0" required="required">
          <button type="button" class="btnrating btn btn-md  pull-right btn-default" data-attr="5" id="rating-star-5">
            <i class="fa fa-star" aria-hidden="true"></i>
          </button>
          <button type="button" class="btnrating btn btn-md  pull-right btn-default" data-attr="4" id="rating-star-4"><i class="fa fa-star" aria-hidden="true"></i></button>
          <button type="button" class="btnrating btn btn-md  pull-right btn-default" data-attr="3" id="rating-star-3"><i class="fa fa-star" aria-hidden="true"></i></button>
          <button type="button" class="btnrating btn btn-md  pull-right btn-default" data-attr="2" id="rating-star-2"><i class="fa fa-star" aria-hidden="true"></i></button>
          <button type="button" class="btnrating btn btn-md  pull-right btn-default" data-attr="1" id="rating-star-1"><i class="fa fa-star" aria-hidden="true"></i></button>
          <button class="btn btn-md btn-primary clearfix" id="submit-review" value="Send"><%= t ".submit" %></button>
        <% end %>
      </div>
    </div>
  </div>
 </div>
