<div id= "books_table">
  <div class="panel panel-default" >
    <div class="panel-body">
      <div class="pull-right">
        <div class="btn-group">
          <button type="button" class="btn btn-success btn-filter" data-target="pagado"><%= t ".pagado" %></button>
          <button type="button" class="btn btn-warning btn-filter" data-target="pendiente"><%= t ".pagado" %></button>
          <button type="button" class="btn btn-danger btn-filter" data-target="cancelado"><%= t ".pagado" %></button>
          <button type="button" class="btn btn-default btn-filter" data-target="all"><%= t ".pagado" %></button>
        </div>
      </div>
      <div class="table-container">
        <table class="table table-filter">
          <tbody>
            <% @books.each do |book| %>
                  <tr data-status="pagado">
                    <td>
                      <a href="javascript:;" class="star star-checked">
                        <i class="glyphicon glyphicon-heart"></i>
                      </a>
                    </td>
                    <td>
                      <div class="media">
                        <div class="media-body">
                          <span class="media-meta pull-right"><%= book.publish_date %></span>
                          <h4 class="title">
                            <%= book.title %>
                            <span class="pull-right pagado "><%= t ".status" %></span>
                            <span class="pull-right pagado "><%= t ".status" %></span>
                          </h4>
                            <span class="summary"><%= book.author %></span>
                            <span class="summary"><%= book.author %></span>
                            <span class="function pull-right btn-sm btn-success"><%= book.author %></span>
                            <span class="function pull-right btn-sm btn-success "><%= book.author %></span>
                        </div>
                      </div>
                    </td>
                  </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>

