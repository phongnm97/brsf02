<div id= "books_table">
  <div class="panel panel-default" >
    <div class="panel-body">
      <div class="pull-right">
        <div class="btn-group">
          <button type="button" class="btn btn-success btn-filter" data-target="reading"><%= t ".reading" %></button>
          <button type="button" class="btn btn-warning btn-filter" data-target="as_read"><%= t ".as_read" %></button>
          <button type="button" class="btn btn-danger btn-filter" data-target="unread"><%= t ".unread" %></button>
          <button type="button" class="btn btn-default btn-filter" data-target="all"><%= t ".reading" %></button>
        </div>
      </div>
      <div class="table-container">
        <table class="table table-filter">
          <tbody>
            <%= render @books %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>

