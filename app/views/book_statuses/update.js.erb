$(".book_<%= @book_status.book_id %>").find(".book_status").attr('status', '<%= @book_status.status %>');
$(".book_<%= @book_status.book_id %>").find(".book_status").html('<%= @book_status.status %>');
<% if @book_status.reading?
    status = "as_read"
    button =   t('.mark_as_read')
  else
    status = "reading"
    button = t('.mark_as_reading')
  end %>
$("#status_form_<%= @book_status.book_id %>").html("<%= escape_javascript(
render("books/status_button_form", {book: @book_status.book, status: status, button: button}) +
        (render "books/unread_form", {book: @book_status.book, status: "unread", button: t(".mark_as_unread")})
) %>");
