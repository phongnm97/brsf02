<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="container">
    <a href="<%= root_path %>"><img src='/uploads/logo.png' id="logo"></img></a>
    <nav>
      <ul class="nav navbar-nav navbar-right">
        <li><%= link_to t("layouts.Home"), root_path %></li>
        <% if logged_in? %>
          <li><%= link_to t("layouts.users"), users_path %></li>
          <li><%= link_to t("layouts.reviews"), reviews_path %></li>
          <li><%= link_to t("layouts.books"), books_path %></li>
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
              <%= t "layouts.account" %><b class="caret"></b>
            </a>
            <ul class="dropdown-menu">
              <li><%= link_to t("layouts.profile"), current_user %></li>
              <li><%= link_to t("layouts.settings"), edit_user_path(current_user) %></li>
              <li class="divider"></li>
              <li>
                <%= link_to t("layouts.logout"), logout_path, method: :delete %>
              </li>
            </ul>
          </li>
        <% else %>
          <li><%= link_to t("layouts.login"), login_path %></li>
        <% end %>
      </ul>
    </nav>
  </div>
</header>
